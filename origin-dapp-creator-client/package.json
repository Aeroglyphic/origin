{
  "name": "origin-dapp-creator-client",
  "version": "1.0.0",
  "description": "Tool of creating configuration files for Origin DApps",
  "main": "src/index.js",
  "scripts": {
    "build": "per-env",
    "build:production": "babel src/* -d dist --presets @babel/env",
    "lint": "eslint '**/*.js'",
    "start": "per-env",
    "start:development": "webpack-dev-server --watch --open",
    "start:production": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OriginProtocol/origin/experimental/origin-dapp-creator"
  },
  "keywords": [
    "Origin Protocol",
    "DApp",
    "Ethereum"
  ],
  "author": "Tom Linton <tom@originprotocol.com>",
  "license": "MIT",
  "dependencies": {
    "@blueprintjs/core": "^3.9.0",
    "@blueprintjs/select": "^3.4.0",
    "formik": "^1.4.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "origin-dapp": "^0.3.0",
    "per-env": "^1.0.2",
    "react": "^16.6.3",
    "react-color": "^2.14.1",
    "react-dom": "^16.6.3",
    "react-router-dom": "^4.3.1",
    "react-styl": "^0.0.3",
    "react-web3": "^1.2.0",
    "rework": "^1.0.1",
    "superagent": "^4.0.0",
    "web3": "^1.0.0-beta.37",
    "webpack": "^4.27.0",
    "yup": "^0.26.6"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-decorators": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^1.0.1",
    "dotenv-webpack": "^1.5.7",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.5",
    "style-loader": "0.23.1",
    "terser-webpack-plugin": "^1.1.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "actions": "./src/actions",
            "components": "./src/components",
            "pages": "./src/pages",
            "reducers": "./src/reducers",
            "utils": "./src/utils"
          }
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ]
    ]
  }
}
